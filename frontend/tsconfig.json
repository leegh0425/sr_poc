{
  "compilerOptions": {
    "baseUrl": ".",
     "paths": {
      "@/app/*": ["app/*"],
      "@/components/*": ["components/*"],
      "@/components": ["components"],
      "@/components/ui/*": ["components/ui/*"],
      "@/hooks/*": ["hooks/*"],
      "@/lib/*": ["lib/*"],
      "@/public/*": ["public/*"],
      "@/*": ["*"]
    },
    "module": "esnext",
    "target": "es2020",
    "jsx": "react-jsx",
    "moduleResolution": "bundler",
    "skipLibCheck": true,
    "noEmit": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "plugins": [
      {
        "name": "next"
      }
    ],
    "allowJs": true,
    "strict": false,
    "incremental": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    "**/*.mts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
